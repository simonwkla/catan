{
  "name": "my-react-router-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "NODE_OPTIONS='--inspect=0.0.0.0:7000' react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "lint": "biome check --error-on-warnings .",
    "lint:fix": "biome check --write .",
    "lint:fix-unsafe": "biome check --write --unsafe .",
    "fmt": "biome format --write . && biome lint --only=lint/nursery/useSortedClasses --write .",
    "ci": "biome ci . && npm run typecheck",
    "typecheck": "react-router typegen && tsc --noEmit",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "drizzle:generate": "drizzle-kit generate --config=./drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config=./drizzle.config.ts",
    "drizzle:studio": "drizzle-kit studio --config=./drizzle.config.ts --port 4000"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.2.8",
    "@react-router/node": "^7.11.0",
    "@react-router/serve": "^7.11.0",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "arktype": "^2.1.29",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "devalue": "^5.6.2",
    "drizzle-orm": "^0.45.1",
    "isbot": "^5.1.32",
    "lucide-react": "^0.562.0",
    "luxon": "^3.7.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "react-router": "^7.11.0",
    "remix-auth": "^4.2.0",
    "remix-auth-oauth2": "^3.4.1",
    "remix-hook-form": "^7.1.1",
    "remix-utils": "^9.0.1",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "ts-pattern": "^5.9.0",
    "tw-animate-css": "^1.4.0",
    "uuid": "^13.0.0",
    "z3-solver": "^4.15.8",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@react-router/dev": "^7.11.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/ui": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.13.0",
    "postcss": "^8.5.6",
    "react-router-devtools": "^6.0.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
